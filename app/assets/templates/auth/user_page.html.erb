<article>
  <h2>Let's create a session:</h2>
  <p>Select from the following fields</p>
  <form>
    <label>Select Industry:</label><br>
    <!-- ng-model will reference this dropdown selection value -->
    <!-- ng-change -->
    <select ng-model="industry_selection" ng-repeat="service in services track by $index">
      <option>{{service.industry_name}}</option>
    </select><br>

    <label>Select Company:</label><br>
    <select ng-model="company_selection" ng-repeat="service in services | filter:industry_selection">
      <option>{{service.company_name}}</option>
    </select><br>

    <label>Select Service:</label><br>
    <select ng-repeat="service in services | filter:company_selection | filter:industry_selection">
      <option>{{service.service_name}}</option>
    </select><br>
  </form>

</article>